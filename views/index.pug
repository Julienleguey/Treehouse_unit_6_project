extends layout.pug

block content
  article.grid-container.portfolio-intro
    div

      h1 My Portfolio

      p.lead.text-light
        | Have a look at the projects I did while studying at Treehouse. It's a work in progress. More should be added in a near future.
  article.grid-container.portfolio-index

    .grid-x.grid-margin-x.small-up-1.medium-up-2.large-up-3

      each proj in projs
        .cell
          a(href=`/project/${proj.proj_id}`)
            img.project-images.thumbnail(src=`../images/project${proj.proj_id+1}_0.png`)
            h5= proj.proj_name
